<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--android:background="#fafafa" -->

    <ImageView
        android:id="@+id/notify_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:text="@string/hello"
            android:id="@+id/notify_title"
            android:textSize="18sp"
            android:textColor="#2B2B2B"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/world"
            android:id="@+id/notify_subtitle"
            android:textSize="12sp"
            android:textColor="#444444"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notify_previous_bt"
                android:layout_toStartOf="@id/notify_middle_bt"
                android:src="@mipmap/previous"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:layout_width="34dp"
                android:layout_height="34dp" />

            <ImageView
                android:id="@+id/notify_middle_bt"
                android:layout_toStartOf="@id/notify_next_bt"
                android:layout_centerVertical="true"
                android:src="@mipmap/play"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="10dp"
                android:padding="0dp"
                android:layout_width="38dp"
                android:layout_height="38dp" />

            <ImageView
                android:id="@+id/notify_next_bt"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/next"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:layout_width="34dp"
                android:layout_height="34dp" />
    </RelativeLayout>
</LinearLayout>
